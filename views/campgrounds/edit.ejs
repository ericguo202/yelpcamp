<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="validatedForm"
                novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="campground[title]" class="form-control"
                        value="<%= campground.title %>" required>
                    <div class="invalid-feedback">
                        Title is required.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" id="price" name="campground[price]" class="form-control" aria-label="Price"
                            aria-describedby="price-label" value="<%= campground.price %>" required>
                        <div class="invalid-feedback">
                            Price is required.
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" name="campground[location]" class="form-control"
                        value="<%= campground.location %>" required>
                    <div class="invalid-feedback">
                        Location is required.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" name="campground[description]" class="form-control"
                        required><%= campground.description %></textarea>
                    <div class="invalid-feedback">
                        Description is required.
                    </div>
                </div>
                <h2>Images</h2>
                <div class="mb-3">
                    <label for="image" class="form-label">Add New Images</label>
                    <input type="file" id="image" name="campground[image]" class="form-control"
                        multiple>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach((image, i) => { %>
                        <img src="<%= image.thumbnail %>" class="img-thumbnail" width="30%" alt="">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= image.filename %>">
                            <label class="form-check-label" for="image-<%= i %>">Delete?</label>
                        </div>
                    <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Back to Campground</a>
        </div>
    </div>